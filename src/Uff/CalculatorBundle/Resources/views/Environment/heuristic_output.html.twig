{% block body -%}
    <h1>Suggested solution</h1>

    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>Provider</th>
            <th>Instance</th>
            <th>Gflops</th>
            <th>RAM</th>
            <th>Plataform</th>
            <th>Disk</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in instances %}
            <tr>
                <td>{{ entity.provider  }}</td>
                <td>{{ entity.name  }}</td>
                <td>{{ entity.gflops }}</td>
                <td>{{ entity.ram }}</td>
                <td>{{ entity.plataform }}</td>
                <td>{{ entity.disk }}</td>
                <td>{{ entity.price }}</td>
                <td>
                    {% if entity.quantity > 0 %}
                        <span class="label label-success">{{ entity.quantity }}</span>
                    {% else %}
                        <span class="label label-default">{{ entity.quantity }}</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h1>Indicators</h1>

    <table class="table table-striped table-hover table-condensed">
        <tbody>
        <tr>
            <th>Best maximum time</th>
            <td>{{ output.best_maximum_time }} hours</td>
        </tr>
        <tr>
            <th>Best monetary cost</th>
            <td>${{ output.best_monetary_cost }}</td>
        </tr>
        <tr>
            <th>Best communication cost</th>
            <td>${{ output.best_communication_cost }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
