{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Applications list</h1>

    <a class="btn btn-primary" href="{{ path('environment_new') }}">
        Create a new application
    </a>

    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Max Cost</th>
                <th>Min Gflops</th>
                <th>Total RAM</th>
                <th>Max Disk</th>
                <th>Max Time</th>
                <th>Max Instances</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('environment_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.maximumCost }}</td>
                <td>{{ entity.minimumGflops }}</td>
                <td>{{ entity.totalRAM }}</td>
                <td>{{ entity.maximumDisk }}</td>
                <td>{{ entity.maximumTime }}</td>
                <td>{{ entity.maximumInstances }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary btn-sm" href="{{ path('environment_show', { 'id': entity.id }) }}">Show application</a>
                        <a class="btn btn-primary btn-sm" href="{{ path('environment_edit', { 'id': entity.id }) }}">Edit application</a>
                        <a class="btn btn-primary btn-sm" href="{{ path('environment_choose_instances', { 'id': entity.id }) }}">Edit VMs</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
