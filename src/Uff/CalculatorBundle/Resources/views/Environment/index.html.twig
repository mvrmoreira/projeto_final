{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Environment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Instances</th>
                <th>Maximumcost</th>
                <th>Minimumgflops</th>
                <th>Totalram</th>
                <th>Maximumdisk</th>
                <th>Maximumtime</th>
                <th>Maximuminstances</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('environment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td></td>
                <td>{{ entity.maximumCost }}</td>
                <td>{{ entity.minimumGflops }}</td>
                <td>{{ entity.totalRAM }}</td>
                <td>{{ entity.maximumDisk }}</td>
                <td>{{ entity.maximumTime }}</td>
                <td>{{ entity.maximumInstances }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('environment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('environment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('environment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
