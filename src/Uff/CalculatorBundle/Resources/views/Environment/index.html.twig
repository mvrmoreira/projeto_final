{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Environment list</h1>

    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Instances</th>
                <th>Max Cost</th>
                <th>Min Gflops</th>
                <th>Total RAM</th>
                <th>Max Disk</th>
                <th>Max Time</th>
                <th>Max Instances</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('environment_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td></td>
                <td>{{ entity.maximumCost }}</td>
                <td>{{ entity.minimumGflops }}</td>
                <td>{{ entity.totalRAM }}</td>
                <td>{{ entity.maximumDisk }}</td>
                <td>{{ entity.maximumTime }}</td>
                <td>{{ entity.maximumInstances }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('environment_calculate', { 'id': entity.id }) }}">calculate</a>
                    </li>
                    <li>
                        <a href="{{ path('environment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('environment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('environment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
