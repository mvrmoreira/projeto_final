{% extends '::base.html.twig' %}

{% block body -%}

    <form method="post">

        <h1>AWS EC2 Instances</h1>

        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>Instance</th>
                    <th>vCPU</th>
                    <th>ECU</th>
                    <th>Memória (GiB)</th>
                    <th>Armazenamento da instância (GB)</th>
                    <th>Uso do Linux/UNIX</th>
                </tr>
            </thead>
            <tbody>
            {% for instance_type in aws_ec2_instances %}
                {% for instance_size in instance_type.sizes %}
                <tr>
                    <td>
                        <div class="checkbox">
                            <input type="checkbox" name="instances[]" value="{{ instance_size.size }}" />
                        </div>
                    </td>
                    <td>{{ instance_size.size }}</td>
                    <td>{{ instance_size.vCPU }}</td>
                    <td>{{ instance_size.ECU }}</td>
                    <td>{{ instance_size.memoryGiB }}</td>
                    <td>{{ instance_size.storageGB }}</td>
                    <td>${{ instance_size.valueColumns.0.prices.USD }}</td>
                </tr>
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>

        <h1>Azure Instances</h1>

        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th></th>
                <th>Instance</th>
                <th>Cores</th>
                <th>RAM</th>
                <th>Disk</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            {% for instance in azure_instances %}
                <tr>
                    <td>
                        <div class="checkbox">
                            <input type="checkbox" name="instances[]" value="{{ instance.name }}" />
                        </div>
                    </td>
                    <td>{{ instance.name }}</td>
                    <td>{{ instance.cores }}</td>
                    <td>{{ instance.ram }}</td>
                    <td>{{ instance.disk }}</td>
                    <td>{{ instance.price }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h1>Google Instances</h1>

        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th></th>
                <th>Instance</th>
                <th>Cores</th>
                <th>GCEU</th>
                <th>Disk</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            {% for instance in google_instances %}
                <tr>
                    <td>
                        <div class="checkbox">
                            <input type="checkbox" name="instances[]" value="{{ instance.name }}" />
                        </div>
                    </td>
                    <td>{{ instance.name }}</td>
                    <td>{{ instance.virtual_cores }}</td>
                    <td>{{ instance.gceu }}</td>
                    <td>{{ instance.memory }}</td>
                    <td>{{ instance.full_price }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div><button type="submit">Save</button></div>
    </form>

{% endblock %}