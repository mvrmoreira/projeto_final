{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Instance</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Gflops</th>
                <td>{{ entity.gflops }}</td>
            </tr>
            <tr>
                <th>Ram</th>
                <td>{{ entity.ram }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('instance') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('instance_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
