{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Instance</h1>

    <table class="table table-striped table-hover table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Environment</th>
                <td><a href="{{ path('environment_show', { 'id': entity.environment.id }) }}">{{ entity.environment.name }}</a></td>
            </tr>
            <tr>
                <th>Gflops</th>
                <td>{{ entity.gflops }}</td>
            </tr>
            <tr>
                <th>RAM</th>
                <td>{{ entity.ram }}</td>
            </tr>
            <tr>
                <th>Plataform</th>
                <td>{{ entity.plataform }}</td>
            </tr>
            <tr>
                <th>Disk</th>
                <td>{{ entity.disk }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('environment_show', { 'id': entity.environment.id }) }}">
                Back to environment
            </a>
        </li>
        <li>
            <a href="{{ path('instance_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
