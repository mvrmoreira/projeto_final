{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Instance list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gflops</th>
                <th>Ram</th>
                <th>Plataform</th>
                <th>Disk</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('instance_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.gflops }}</td>
                <td>{{ entity.ram }}</td>
                <td>{{ entity.plataform }}</td>
                <td>{{ entity.disk }}</td>
                <td>{{ entity.price }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('instance_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('instance_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('instance_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
