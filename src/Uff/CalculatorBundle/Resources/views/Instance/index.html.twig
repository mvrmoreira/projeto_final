<h1>Instance list</h1>

<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Package</th>
            <th>Gflops</th>
            <th>RAM</th>
            <th>Plataform</th>
            <th>Disk</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('instance_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ loop.index - 1  }}</td>
            <td>{{ entity.gflops }}</td>
            <td>{{ entity.ram }}</td>
            <td>{{ entity.plataform }}</td>
            <td>{{ entity.disk }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.quantity }}</td>
            <td>
            <ul>
                <li>
                    <a href="{{ path('instance_show', { 'id': entity.id }) }}">show</a>
                </li>
                <li>
                    <a href="{{ path('instance_edit', { 'id': entity.id }) }}">edit</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

    <ul>
    <li>
        <a href="{{ path('instance_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
